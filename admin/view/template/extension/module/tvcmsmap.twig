{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
              {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
              {% endif %}
            </div>
          </div>   
          <div class="form-group"> 
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          {% if map_type %}
            <div class="form-group"> 
              <label class="col-sm-2 control-label" for="input-status1">{{ entry_map_type }}</label>
              <div class="col-sm-10">
                <select name="map" id="input-status1" class="form-control">
                  <option {% if map == "roadmap" %} selected="selected" {% endif %} value="roadmap" selected="selected">Roadmap</option>
                  <option {% if map == "satellite" %} selected="selected" {% endif %} value="satellite">Satellite</option>
                  <option {% if map == "hybrid" %} selected="selected" {% endif %} value="hybrid">Satellite with Street Names</option>
                  <option {% if map == "terrain" %} selected="selected" {% endif %} value="terrain">Terrain</option>
                </select>
              </div>
            </div>
          {% endif %}
          {% if zoom %}
            <div class="form-group"> 
              <label class="col-sm-2 control-label" for="input-status2">{{ entry_zoom }}</label>
              <div class="col-sm-10">
                <select name="zoom" id="input-status2" class="form-control">
                  <option {% if zoom == "2" %} selected="selected" {% endif %} value="2">2000 km</option>
                  <option {% if zoom == "3" %} selected="selected" {% endif %} value="3">1000 km</option>
                  <option {% if zoom == "4" %} selected="selected" {% endif %} value="4" >400 km</option>
                  <option {% if zoom == "5" %} selected="selected" {% endif %} value="5">200 km</option>
                  <option {% if zoom == "6" %} selected="selected" {% endif %} value="6">100 km</option>
                  <option {% if zoom == "7" %} selected="selected" {% endif %} value="7">50 km</option>
                  <option {% if zoom == "8" %} selected="selected" {% endif %} value="8">30 km</option>
                  <option {% if zoom == "9" %} selected="selected" {% endif %} value="9">15 km</option>
                  <option {% if zoom == "10" %} selected="selected" {% endif %} value="10">8 km</option>
                  <option {% if zoom == "11" %} selected="selected" {% endif %} value="11">4 km</option>
                  <option {% if zoom == "12" %} selected="selected" {% endif %} value="12">2 km</option>
                  <option {% if zoom == "13" %} selected="selected" {% endif %} value="13">1 km</option>
                  <option {% if zoom == "14" %} selected="selected" {% endif %} value="14">400 m</option>
                  <option {% if zoom == "15" %} selected="selected" {% endif %} value="15">200 m</option>
                  <option {% if zoom == "16" %} selected="selected" {% endif %} value="16">100 m</option>
                  <option {% if zoom == "17" %} selected="selected" {% endif %} value="17">50 m</option>
                  <option {% if zoom == "18" %} selected="selected" {% endif %} value="18">20 m</option>
                  <option {% if zoom == "19" %} selected="selected" {% endif %} value="19">10 m</option>
                  <option {% if zoom == "20" %} selected="selected" {% endif %} value="20">5 m</option>
                  <option {% if zoom == "21" %} selected="selected" {% endif %} value="21">2.5 m</option>
                </select>

              </div>
            </div>
          {% endif %}
          {% if api_key %}
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-name">{{ entry_api_key }}</label>
              <div class="col-sm-10">
                <input type="text" name="api_key" value="{{ api_key }}" placeholder="{{ entry_api_key }}" id="input-name" class="form-control" />
              </div>
            </div>
          {% endif %}
          {% if letitude %}
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-name1">{{ entry_let }}</label>
              <div class="col-sm-10">
                <input type="text" name="let" value="{{ let }}" placeholder="{{ entry_let }}" id="input-name1" class="form-control" />
              </div>
            </div>
          {% endif %}
          {% if longitude %}
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-name2">{{ entry_lon }}</label>
              <div class="col-sm-10">
                <input type="text" name="lon" value="{{ lon }}" placeholder="{{ entry_lon }}" id="input-name2" class="form-control" />
              </div>
            </div>
          {% endif %}
          {% if main_form %}
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <ul class="nav nav-tabs" id="language">
                {% for language in languages %}
                <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                {% endfor %}
              </ul>
              <div class="tab-content">{% for language in languages %}
                <div class="tab-pane" id="language{{ language.language_id }}">
                  
                  {% if main_form %}
                    {% if main_title %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-name3">{{ entry_title }}</label>
                        <div class="col-sm-10">
                          <input type="text" name="tvcmsmap_des[{{ language.language_id }}][main_title]" value="{{ tvcmsmap_des[language.language_id] ? tvcmsmap_des[language.language_id].main_title }}" placeholder="{{ entry_title }}" id="input-name3" class="form-control" />
                        </div>
                      </div>
                    {% endif %}
                    {% if main_short_description %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-name4">{{ entry_short_des }}</label>
                        <div class="col-sm-10">
                          <input type="text" name="tvcmsmap_des[{{ language.language_id }}][main_short_des]" value="{{ tvcmsmap_des[language.language_id] ? tvcmsmap_des[language.language_id].main_short_des }}" placeholder="{{ entry_short_des }}" id="input-name4" class="form-control" />
                        </div>
                      </div>
                    {% endif %}
                    {% if main_description %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-name5">{{ entry_main_des }}</label>
                        <div class="col-sm-10">
                          <input type="text" name="tvcmsmap_des[{{ language.language_id }}][main_des]" value="{{ tvcmsmap_des[language.language_id] ? tvcmsmap_des[language.language_id].main_des }}" placeholder="{{ entry_main_des }}" id="input-name5" class="form-control" />
                        </div>
                      </div>
                    {% endif %}
                    {% if main_image %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-name6">{{ entry_img }}</label>
                        <div class="col-sm-10">
                          <a href="" id="thumb-image{{ language.language_id }}" data-toggle="image" class="img-thumbnail">
                            <img src="{{ main_img[language.language_id] }}" alt="" title="" data-placeholder="{{ placeholder }}" />
                          </a>
                          <input type="hidden" name="tvcmsmap_des[{{ language.language_id }}][main_img]" value="{{ tvcmsmap_des[language.language_id] ? tvcmsmap_des[language.language_id].main_img }}" id="input-name6{{ language.language_id }}" />
                        </div>
                      </div>
                    {% endif %}
                  {% endif %}
                  {% if image %}
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-name">{{ entry_logo_img }}</label>
                      <div class="col-sm-10">
                        <a href="" id="thumb-sub_logo_img{{ language.language_id }}" data-toggle="image" class="img-thumbnail">
                          <img src="{{ logo_img[language.language_id] }}" alt="" title="" data-placeholder="{{ placeholder }}" />
                        </a>
                        <input type="hidden" name="tvcmsmap_des[{{ language.language_id }}][sub_logo_img]" value="{{ tvcmsmap_des[language.language_id] ? tvcmsmap_des[language.language_id].sub_logo_img }}" id="input-sub_logo_img{{ language.language_id }}" />
                      </div>
                    </div>
                  {% endif %}
                  {% if description %}
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-named">{{ entry_des }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tvcmsmap_des[{{ language.language_id }}][sub_des1]" value="{{ tvcmsmap_des[language.language_id] ? tvcmsmap_des[language.language_id].sub_des1 }}" placeholder="{{ entry_des }}" id="input-named" class="form-control" />
                      </div>
                    </div>
                  {% endif %}
                  {% if short_description %}
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-namee">{{ entry_short_des }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tvcmsmap_des[{{ language.language_id }}][sub_short_des]" value="{{ tvcmsmap_des[language.language_id] ? tvcmsmap_des[language.language_id].sub_short_des }}" placeholder="{{ entry_short_des }}" id="input-namee" class="form-control" />
                      </div>
                    </div>
                  {% endif %}
                  {% if description %}         
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-texte{{ language.language_id }}">{{ entry_short_des }}</label>
                    <div class="col-sm-10">
                      <textarea name="tvcmsmap_des[{{ language.language_id }}][sub_des2]" placeholder="{{ entry_short_des }}" id="input-text{{ language.language_id }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control">{{ tvcmsmap_des[language.language_id] ? tvcmsmap_des[language.language_id].sub_des2 }}</textarea>
                    </div>
                  </div>
                  {% endif %}
                  {% if btn_title %}
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-nameer">{{ entry_btn_title }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tvcmsmap_des[{{ language.language_id }}][sub_btn_title]" value="{{ tvcmsmap_des[language.language_id] ? tvcmsmap_des[language.language_id].sub_btn_title }}" placeholder="{{ entry_btn_title }}" id="input-nameer" class="form-control" />
                      </div>
                    </div>
                  {% endif %}
                </div>
                {% endfor %}</div>
            </div>
          </div>
          {% endif %}
        </form>
      </div>
    </div>
  </div>
  
  <script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>
  <link href="view/javascript/summernote/summernote.css" rel="stylesheet" />
  <script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script> 
  <script type="text/javascript" src="view/javascript/summernote/opencart.js"></script> 
  <script type="text/javascript"><!--
    $('#language a:first').tab('show');
    $('#option a:first').tab('show');
//--></script></div>
{{ footer }}
