{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div id="growls" class="default"></div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>         
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
              {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
              {% endif %}
            </div>
          </div>
          {% if main_form %}
            <div class="form-group">
              <center><h1>{{ text_main }}</h1></center>
            </div>
            {% if  main_title or main_short_description %}
              <div class="tab-content">
                <div class="tab-pane active" id="tab-general">
                  <ul class="nav nav-tabs" id="language">
                    {% for language in languages %}
                    <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                    {% endfor %}
                  </ul>
                  <div class="tab-content">{% for language in languages %}
                    <div class="tab-pane" id="language{{ language.language_id }}">
                        {% if main_title %}
                        <div class="form-group">
                          <label class="col-sm-2 control-label" for="input-tvcmscustomlink_main_title{{ language.language_id }}">{{ entry_main_title }}</label>
                          <div class="col-sm-10">
                            <input type="text" name="tvcmscustomlink_main[{{ language.language_id }}][tvcmscustomlink_main_title]" value="{{ tvcmscustomlink_main[language.language_id] ? tvcmscustomlink_main[language.language_id].tvcmscustomlink_main_title }}" placeholder="{{ entry_main_title }}" id="input-name{{ language.language_id }}" class="form-control" />
                          </div>
                        </div>
                        {% endif %}
                        {% if main_short_description %}
                        <div class="form-group">
                          <label class="col-sm-2 control-label" for="input-tvcmscustomlink_main_short{{ language.language_id }}">{{ entry_main_short }}</label>
                          <div class="col-sm-10">
                            <input type="text" name="tvcmscustomlink_main[{{ language.language_id }}][tvcmscustomlink_main_short]" value="{{ tvcmscustomlink_main[language.language_id] ? tvcmscustomlink_main[language.language_id].tvcmscustomlink_main_short }}"
                             placeholder="{{ entry_main_short }}" id="input-name{{ language.language_id }}" class="form-control" />
                          </div>
                        </div>
                        {% endif %}
                    </div>
                    {% endfor %}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endif %}
            
          
          <div class="form-group">
            <center><h1>{{ text_submain }}</h1></center>
          </div>
          <div class="table-responsive">
            <table id="special" class="table table-bordered table-hover tvimageslider">
              <thead>
                <tr>
                  {% if title %}<td class="text-left">{{ entry_title }}</td>{% endif %}
                  {% if link %}<td class="text-left">{{ entry_link }}</td>{% endif %}
                  <td class="text-left">{{ entry_status }}</td>
                  <td class="text-left"></td>
                </tr>
              </thead>
              <tbody>
                  {% set tvcustomlink_row = 0 %}
                  {% for tvcustomlink in tvcustomlink %}             
                  <tr id="recordsArray_{{ tvcustomlink.tvcustomlink_id }}" class="custom-row{{ tvcustomlink_row }}">
                    {% if title %}
                      <td class="text-left">
                      {% for language in languages %}
                          <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                            <input type="text" name="tvcustomlink[{{ tvcustomlink_row }}][language][{{ language.language_id }}][title]" value="{{ tvcustomlink.tvcustomlink_title[language.language_id].title }}" placeholder="{{ entry_title }}" class="form-control" />
                          </div>
                      {% endfor %}
                      </td>
                    {% endif %}
                    {% if link %}
                      <td class="text-right"><input type="text" name="tvcustomlink[{{ tvcustomlink_row }}][link]" value="{{ tvcustomlink.tvcustomlink_link }}" placeholder="{{ entry_priority }}" class="form-control" /></td>
                    {% endif %}
                    
                      <td class="text-left">        
                      <label class="radio-inline"> {% if tvcustomlink.tvcustomlink_status %}
                      <input type="radio" name="tvcustomlink[{{ tvcustomlink_row }}][status]" value="1" checked="checked" />
                      {{ text_yes }}
                      {% else %}
                      <input type="radio" name="tvcustomlink[{{ tvcustomlink_row }}][status]" value="1" />
                      {{ text_yes }}
                      {% endif %} </label>
                      <label class="radio-inline"> {% if not tvcustomlink.tvcustomlink_status %}
                      <input type="radio" name="tvcustomlink[{{ tvcustomlink_row }}][status]" value="0" checked="checked" />
                      {{ text_no }}
                      {% else %}
                      <input type="radio" name="tvcustomlink[{{ tvcustomlink_row }}][status]" value="0" />
                      {{ text_no }}
                      {% endif %} </label>
                      </td>
                   

                    <td class="text-left"><button type="button" onclick="$('.custom-row{{ tvcustomlink_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>

                  </tr>
                  {% set tvcustomlink_row = tvcustomlink_row + 1 %}
                  {% endfor %}
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="3"></td>
                  <td class="text-left"><button type="button" onclick="addSpecial();" data-toggle="tooltip" title="{{ button_special_add }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
                </tr>
              </tfoot>       
            </table>
          </div>
          
        </form>
      </div>
    </div>
  </div>
</div>

  <script type="text/javascript" src="view/javascript/themewebvolty/tvcmsjquery.ui.core.min.js
"></script> 
  <script type="text/javascript" src="view/javascript/themewebvolty/tvcmsjquery.ui.widget.min.js"></script> 
  <script type="text/javascript" src="view/javascript/themewebvolty/tvcmsjquery.ui.mouse.min.js"></script> 
  <script type="text/javascript" src="view/javascript/themewebvolty/tvcmsjquery.sortable.js"></script> 
  <script type="text/javascript" src="view/javascript/themewebvolty/tvcmsjquery-ui.js"></script> 

<script type="text/javascript"><!--

  $('#language a:first').tab('show');

  $(document).ready(function(){
    function removeTags(){
      setTimeout(function() {
            $(".tvimageslider-position-update").remove();
          }, 3000);
      }
    var urll = 'index.php?route=extension/module/tvcmscustomlink/ajax&user_token={{ user_token }}&action=update_position&';

    var obj  = $(document).find('body');
        
    $(".tvimageslider tbody").sortable({
        opacity: 0.6,
        cursor: 'move',
        update: function() {
            var order = $(this).sortable("serialize");
            var qq = urll + '' + order;
            $.post(qq, order, function(data) {
              console.log(data);
                var arr_data = data.split('##');

                var result = arr_data[0];

                var notic = 'Position is Updated.';
                if (result == 'right') {
                    var tags = '';

                    tags += '<div id="growls" class="alert alert-success alert-dismissible default tvimageslider-position-update"><i class="fa fa-check-circle"></i> '+ notic +'<button type="button" class="close" data-dismiss="alert">&times;</button>';
                    tags += '</div>';

                    obj.find('#growls').html(tags);
                    removeTags();
                }
            });
        }
    });
  });

    var tvcustomlink_row = {{ tvcustomlink_row }};

    function addSpecial() {
        html  = '<tr class="custom-row' + tvcustomlink_row + '">';
        {% if title %}
          html += '  <td class="text-left">';
          {% for language in languages %}
          html += '       <div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>\
                              <input type="text" name="tvcustomlink[' + tvcustomlink_row + '][language][{{ language.language_id }}][title]" value="" placeholder="{{ entry_title }}" class="form-control" />\
                            </div>';
          {% endfor %}
          html += ' </td>';
        {% endif %}
        {% if link %}
          html += '  <td class="text-right"><input type="text" name="tvcustomlink[' + tvcustomlink_row + '][link]" value="" placeholder="{{ entry_link }}" class="form-control" /></td>';
        {% endif %}
        
        html += '  <td class="text-left"><label class="radio-inline"><input type="radio" name="tvcustomlink[' + tvcustomlink_row + '][status]" value="1" checked="checked" /> {{ text_yes }} </label><label class="radio-inline"><input type="radio" name="tvcustomlink[' + tvcustomlink_row + '][status]" value="1" /> {{ text_no }}</label></td>';
        

        html += '  <td class="text-left"><button type="button" onclick="$(\'.custom-row' + tvcustomlink_row + '\').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
        html += '</tr>';
        $('#special tbody').append(html);
        tvcustomlink_row++;
    }
//--></script> 

