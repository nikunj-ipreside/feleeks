{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-imageslider" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid"> {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-imageslider" class="form-horizontal">
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <ul class="nav nav-tabs" id="language">
                {% for language in languages %}
                <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                {% endfor %}
              </ul>
              <div class="tab-content ">{% for language in languages %}
                <div class="tab-pane" id="language{{ language.language_id }}">

                    <div class="form-group {% if status_title %} {% else %} hidden {% endif %}">
                      <label class="col-sm-2 control-label" for="input-title{{ language.language_id }}">{{ entry_title }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tvcmsadvanceblockform[{{ language.language_id }}][tvcmsadvanceblocksub_title]" value="{{ tvcmsadvanceblockform[language.language_id] ? tvcmsadvanceblockform[language.language_id].tvcmsadvanceblocksub_title }}" class="form-control" placeholder="{{ entry_title }}" id="input-name{{ language.language_id }}" />
                        {% if error_title[language.language_id] %}
                        <div class="text-danger">{{ error_title[language.language_id] }}</div>
                        {% endif %}</div>
                    </div>
                  
                    <div class="form-group {% if status_short_description %} {% else %} hidden {% endif %}">
                      <label class="col-sm-2 control-label" for="input-shortdes{{ language.language_id }}">{{ entry_main_short_des }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tvcmsadvanceblockform[{{ language.language_id }}][tvcmsadvanceblocksub_sub_des]" value="{{ tvcmsadvanceblockform[language.language_id] ? tvcmsadvanceblockform[language.language_id].tvcmsadvanceblocksub_sub_des }}" placeholder="{{ entry_main_short_des }}" id="input-name{{ language.language_id }}" class="form-control" />
                        <input type="hidden" name="tvcmsadvanceblockform[{{ language.language_id }}][tvcmsadvanceblocksublang_id]" value="{{ language.language_id }}" placeholder="{{ entry_main_short_des }}" id="input-name{{ language.language_id }}" class="form-control" />
                         </div>
                    </div>
                    <div class="form-group {% if status_description %} {% else %} hidden {% endif %}">
                      <label class="col-sm-2 control-label" for="input-des{{ language.language_id }}">{{ entry_main_des }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tvcmsadvanceblockform[{{ language.language_id }}][tvcmsadvanceblocksub_des]" value="{{ tvcmsadvanceblockform[language.language_id] ? tvcmsadvanceblockform[language.language_id].tvcmsadvanceblocksub_des }}" placeholder="{{ entry_main_des }}" id="input-des{{ language.language_id }}" class="form-control" />
                      </div>
                    </div>
                    <div class="form-group {% if status_link %} {% else %} hidden {% endif %}">
                      <label class="col-sm-2 control-label" for="input-link{{ language.language_id }}">{{ entry_main_block_link }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tvcmsadvanceblockform[{{ language.language_id }}][tvcmsadvanceblocksub_link]" value="{{ tvcmsadvanceblockform[language.language_id] ? tvcmsadvanceblockform[language.language_id].tvcmsadvanceblocksub_link }}" placeholder="{{ entry_main_block_link }}" id="input-link{{ language.language_id }}" class="form-control" />
                      </div>
                    </div>
                    <div class="form-group {% if status_image %} {% else %} hidden {% endif %}">
                      <label class="col-sm-2 control-label" for="input-image{{ language.language_id }}">{{ entry_image }}</label>
                      <div class="col-sm-10">
                        <a href="" id="thumb-image{{ language.language_id }}" data-toggle="image" class="img-thumbnail">
                          <img src="{{ img[language.language_id] }}" alt="" title="" data-placeholder="{{ placeholder }}" />
                        </a>
                          <input type="hidden" name="tvcmsadvanceblockform[{{ language.language_id }}][tvcmsadvanceblocksub_image]" value="{{ tvcmsadvanceblockform[language.language_id] ? tvcmsadvanceblockform[language.language_id].tvcmsadvanceblocksub_image }}" id="input-image{{ language.language_id }}" />
                        {% if error_image[language.language_id] %}
                        <div class="text-danger">{{ error_image[language.language_id] }}</div>
                        {% endif %}
                      </div>
                    </div>
                
                 
                  
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-statusa{{ language.language_id }}">{{ entry_status }}</label>
                    <div class="col-sm-10">
                      <select name="tvcmsadvanceblockform[{{ language.language_id }}][tvcmsadvanceblocksub_status]" id="input-status" class="form-control">
                        {% if tvcmsadvanceblockform[language.language_id].tvcmsadvanceblocksub_status %}
                          <option value="1" selected="selected">{{ text_enabled }}</option>
                          <option value="0">{{ text_disabled }}</option>
                        {% else %}
                          <option value="1">{{ text_enabled }}</option>
                          <option value="0" selected="selected">{{ text_disabled }}</option>
                        {% endif %}
                      </select>
                    </div>
                  </div>                 
                </div>
                {% endfor %}</div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>
  <link href="view/javascript/summernote/summernote.css" rel="stylesheet" />
  <script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script>
  <script type="text/javascript" src="view/javascript/summernote/opencart.js"></script>
  <script type="text/javascript"><!--
    $('#language a:first').tab('show');
//--></script>

</div>
{{ footer }}