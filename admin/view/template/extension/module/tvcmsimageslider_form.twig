
{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-imageslider" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid"> {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-imageslider" class="form-horizontal">       
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <ul class="nav nav-tabs" id="language">
                {% for language in languages %}
                <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                {% endfor %}
              </ul>
              <div class="tab-content">{% for language in languages %}
                <div class="tab-pane" id="language{{ language.language_id }}">
                  {% if record_targeturl %}
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-link{{ language.language_id }}">{{ column_link }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tvcmsimageslider[{{ language.language_id }}][tvcmsimageslidersub_link]" value="{{ tvcmsimageslider[language.language_id] ? tvcmsimageslider[language.language_id].tvcmsimageslidersub_link }}" class="form-control" placeholder="{{ column_link }}" id="input-name{{ language.language_id }}" />
                        </div>
                    </div>
                  {% endif %}
                  {% if record_title %}
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-tvcmsimageslidersub_title{{ language.language_id }}">{{ column_title }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tvcmsimageslider[{{ language.language_id }}][tvcmsimageslidersub_title]" value="{{ tvcmsimageslider[language.language_id] ? tvcmsimageslider[language.language_id].tvcmsimageslidersub_title }}" placeholder="{{ column_title }}" id="input-name{{ language.language_id }}" class="form-control" />
                        {% if error_title[language.language_id] %}
                        <div class="text-danger">{{ error_title[language.language_id] }}</div>
                        {% endif %} </div>
                    </div>
                  {% endif %}
                    <input type="hidden" name="tvcmsimageslider[{{ language.language_id }}][lang]" value="{{ language.language_id }}" placeholder="{{ column_title }}" id="input-name{{ language.language_id }}" class="form-control" />
                  {% if record_descriptionmain %}
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-tvcmsimageslidersub_des_main{{ language.language_id }}">{{ column_des_main }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tvcmsimageslider[{{ language.language_id }}][tvcmsimageslidersub_des_main]" value="{{ tvcmsimageslider[language.language_id] ? tvcmsimageslider[language.language_id].tvcmsimageslidersub_des_main }}" placeholder="{{ column_des_main }}" id="input-tvcmsimageslidersub_des_main{{ language.language_id }}" class="form-control" />
                      </div>
                    </div>
                  {% endif %}
                  {% if record_descriptionsub %}
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-tvcmsimageslidersub_des_sub{{ language.language_id }}">{{ column_des_sub }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tvcmsimageslider[{{ language.language_id }}][tvcmsimageslidersub_des_sub]" value="{{ tvcmsimageslider[language.language_id] ? tvcmsimageslider[language.language_id].tvcmsimageslidersub_des_sub }}" placeholder="{{ column_des_sub }}" id="input-tvcmsimageslidersub_des_sub{{ language.language_id }}" class="form-control" />
                      </div>
                    </div>
                  {% endif %}
                  {% if record_image %}
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-tvcmsimageslidersub_image{{ language.language_id }}">{{ column_image }}</label>
                      <div class="col-sm-10">
                        <a href="" id="thumb-image{{ language.language_id }}" data-toggle="image" class="img-thumbnail">
                          <img src="{{ img[language.language_id] }}" alt="" title="" data-placeholder="{{ placeholder }}" />
                        </a>
                          <input type="hidden" name="tvcmsimageslider[{{ language.language_id }}][tvcmsimageslidersub_image]" value="{{ tvcmsimageslider[language.language_id] ? tvcmsimageslider[language.language_id].tvcmsimageslidersub_image }}" id="input-tvcmsimageslidersub_image{{ language.language_id }}" />
                        {% if error_image[language.language_id] %}
                        <div class="text-danger">{{ error_image[language.language_id] }}</div>
                        {% endif %}
                      </div>
                    </div>
                 {% endif %}
                  {% if record_textalignment %}
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-tvcmsimageslidersub_textaligment{{ language.language_id }}">{{ column_txtali }}</label>
                      <div class="col-sm-10">                      
                        <label class="radio-inline">
                          <input type="radio"  {% if tvcmsimageslider[language.language_id].tvcmsimageslidersub_textaligment == 'ttvmain-slider-contant-left' %} checked="checked" {% endif %} name="tvcmsimageslider[{{ language.language_id }}][tvcmsimageslidersub_textaligment]"  value="ttvmain-slider-contant-left"/>
                          {{ text_left }}
                        </label>
                        <label class="radio-inline">
                          <input type="radio" {% if tvcmsimageslider[language.language_id].tvcmsimageslidersub_textaligment == 'ttvmain-slider-contant-center' %} checked="checked" {% endif %} name="tvcmsimageslider[{{ language.language_id }}][tvcmsimageslidersub_textaligment]" value="ttvmain-slider-contant-center"/>
                          {{ text_center }}
                        </label>
                        <label class="radio-inline">
                          <input type="radio" {% if tvcmsimageslider[language.language_id].tvcmsimageslidersub_textaligment == 'ttvmain-slider-contant-right' %} checked="checked" {% endif %} name="tvcmsimageslider[{{ language.language_id }}][tvcmsimageslidersub_textaligment]" value="ttvmain-slider-contant-right"/>
                          {{ text_right }}
                        </label>
                        <label class="radio-inline">
                          <input type="radio" {% if tvcmsimageslider[language.language_id].tvcmsimageslidersub_textaligment == 'ttvmain-slider-contant-none' %} checked="checked" {% endif %} name="tvcmsimageslider[{{ language.language_id }}][tvcmsimageslidersub_textaligment]" value="ttvmain-slider-contant-none"/>
                          {{ text_hide }}
                        </label>
                      </div>
                    </div>
                  {% endif %}
                  {% if record_buttoncaption %}
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-tvcmsimageslidersub_buttoncaption{{ language.language_id }}">{{ column_btncap }}</label>
                      <div class="col-sm-10">
                        <input type="text" name="tvcmsimageslider[{{ language.language_id }}][tvcmsimageslidersub_buttoncaption]" value="{{ tvcmsimageslider[language.language_id] ? tvcmsimageslider[language.language_id].tvcmsimageslidersub_buttoncaption }}" placeholder="{{ column_btncap }}" id="input-name{{ language.language_id }}" class="form-control" />
                      </div>
                    </div>
                  {% endif %}
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-statusa{{ language.language_id }}">{{ column_status }}</label>
                    <div class="col-sm-10">
                      <select name="tvcmsimageslider[{{ language.language_id }}][tvcmsimageslidersub_enable]" id="input-tvcmsimageslidersub_enable" class="form-control">
                        {% if tvcmsimageslider[language.language_id].tvcmsimageslidersub_enable %}
                          <option value="1" selected="selected">{{ text_enabled }}</option>
                          <option value="0">{{ text_disabled }}</option>
                        {% else %}
                          <option value="1">{{ text_enabled }}</option>
                          <option value="0" selected="selected">{{ text_disabled }}</option>
                        {% endif %}
                      </select>
                    </div>
                  </div>                 
                </div>
                {% endfor %}</div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>
  <link href="view/javascript/summernote/summernote.css" rel="stylesheet" />
  <script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script>
  <script type="text/javascript" src="view/javascript/summernote/opencart.js"></script>
  <script type="text/javascript"><!--
    $('#language a:first').tab('show');
//--></script>

</div>
{{ footer }}