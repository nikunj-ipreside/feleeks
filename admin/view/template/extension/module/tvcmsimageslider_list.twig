    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
      <form action="{{ mainaction }}" method="post" enctype="multipart/form-data" id="form-imageslider" class="form-horizontal">

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_setting }}</h3>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_namee }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_namee }}" id="input-name" class="form-control" />
              {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
              {% endif %}
            </div>
          </div>   
          <div class="form-group"> 
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-speed">{{ entry_main_speed }}</label>
            <div class="col-sm-10">
              <input type="text" name="speed" value="{{ speed }}" placeholder="{{ entry_main_speed }}" id="input-name" class="form-control" /><span class="input-group-addon">
                      milliseconds
                    </span>
              {{ entry_main_speed_des }}
            </div>
          </div>   
          

          <div class="form-group"> 
            <label class="col-sm-2 control-label" for="input-hover">{{ entry_main_hover }}</label>
            <div class="col-sm-10">
              <select name="hover" id="input-hover" class="form-control">
                {% if hover %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
              {{ entry_main_hover_des }}
            </div>
          </div>

           <div class="form-group"> 
            <label class="col-sm-2 control-label" for="input-loop">{{ entry_main_loop }}</label>
            <div class="col-sm-10">
              <select name="loop" id="input-loop" class="form-control">
                {% if loop %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
              {{ entry_main_loop_des }}
            </div>
          </div>

          <div class="form-group"> 
            <label class="col-sm-2 control-label" for="input-slider">{{ entry_main_slider }}</label>
            <div class="col-sm-10">
              <select name="slider" id="input-slider" class="form-control">
                {% if slider %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
              {{ entry_main_slider_des }}
            </div>
          </div>

          <div class="form-group"> 
            <div class="col-sm-12">    

              <button type="submit" form="form-imageslider" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
            </div>
          </div>
        </div>
      </div>
    </form>
    <div class="row">
      <div id="filter-cateimageslider" class="col-md-3 col-md-push-9 col-sm-12 hidden-sm hidden-xs">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-filter"></i> {{ text_filter }}</h3>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <label class="control-label" for="input-name">{{ column_title }}</label>
              <input type="text" name="filter_name" value="{{ filter_name }}" placeholder="{{ column_title }}" id="input-name" class="form-control" />
            </div>
            
            <div class="form-group">
              <label class="control-label" for="input-status">{{ column_status }}</label>
              <select name="filter_status" id="input-status" class="form-control">
                <option value=""></option>
                {% if filter_status == '1' %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                {% endif %}
                {% if filter_status == '0' %}
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% else %}
                  <option value="0">{{ text_disabled }}</option>
                {% endif %}                    
              </select>
            </div>
            <div class="form-group text-right">
              <button type="button" id="button-filter" class="btn btn-default"><i class="fa fa-filter"></i> {{ button_filter }}</button>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-9 col-md-pull-3 col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
          </div>
          <div class="panel-body">
            <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-cateimageslider">
              <div class="table-responsive">
                <table class="table table-bordered table-hover tvimageslider">
                  <thead>
                    <tr>
                      <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
                      {% if record_image %}<td class="text-center">{{ column_image }}</td>{% endif %}

                      {% if record_title %}<td class="text-left">{% if sort == 'pd.tvcmsimageslidersub_title' %} <a href="{{ sort_tvcmsimageslider_title }}" class="{{ order|lower }}">{{ column_title }}</a> {% else %} <a href="{{ sort_tvcmsimageslider_title }}">{{ column_title }}</a> {% endif %}</td>{% endif %}

                      {% if record_targeturl %}<td class="text-left">{% if sort == 'p.tvcmsimageslider_link' %} <a href="{{ sort_tvcmsimageslider_link }}" class="{{ order|lower }}">{{ column_link }}</a> {% else %} <a href="{{ sort_tvcmsimageslider_link }}">{{ column_link }}</a> {% endif %}</td>{% endif %}

                      {% if record_textalignment %}<td class="text-left">{% if sort == 'pd.tvcmsimageslider_textaligment' %} <a href="{{ sort_tvcmsimageslider_textaligment }}" class="{{ order|lower }}">{{ column_txtali }}</a> {% else %} <a href="{{ sort_tvcmsimageslider_textaligment }}">{{ column_txtali }}</a> {% endif %}</td>{% endif %}

                      {% if record_buttoncaption %}<td class="text-left">{% if sort == 'pd.tvcmsimageslider_buttoncaption' %} <a href="{{ sort_tvcmsimageslider_buttoncaption }}" class="{{ order|lower }}">{{ column_btncap }}</a> {% else %} <a href="{{ sort_tvcmsimageslider_buttoncaption }}">{{ column_btncap }}</a> {% endif %}</td>{% endif %}

                      {% if record_descriptionmain %}<td class="text-left">{% if sort == 'pd.sort_tvcmsimageslider_des_main' %} <a href="{{ sort_sort_tvcmsimageslider_des_main }}" class="{{ order|lower }}">{{ column_des_main }}</a> {% else %} <a href="{{ sort_sort_tvcmsimageslider_des_main }}">{{ column_des_main }}</a> {% endif %}</td>{% endif %}

                       {% if record_descriptionsub %}<td class="text-left">{% if sort == 'pd.sort_tvcmsimageslider_des_sub' %} <a href="{{ sort_sort_tvcmsimageslider_des_sub }}" class="{{ order|lower }}">{{ column_des_sub }}</a> {% else %} <a href="{{ sort_sort_tvcmsimageslider_des_sub }}">{{ column_des_sub }}</a> {% endif %}</td>{% endif %}

                      <td class="text-left">{% if sort == 'pd.tvcmsimageslider_enable' %} <a href="{{ sort_tvcmsimageslider_enable }}" class="{{ order|lower }}">{{ column_status }}</a> {% else %} <a href="{{ sort_tvcmsimageslider_enable }}">{{ column_status }}</a> {% endif %}</td>

                      <td class="text-left">{{ column_action }}</td>
                    </tr>
                  </thead>
                  <tbody>
                    {% if imagesliders %}
                    {% for imageslider in imagesliders %}
                      <tr id="recordsArray_{{ imageslider.id }}">
                        <td class="text-center">{% if imageslider.id in selected %}
                          <input type="checkbox" name="selected[]" value="{{ imageslider.id }}" checked="checked" />
                          {% else %}
                          <input type="checkbox" name="selected[]" value="{{ imageslider.id }}" />
                          {% endif %}</td>
                        {% if record_image %}<td class="text-center">{% if imageslider.image %} <img src="{{ imageslider.image }}" alt="{{ imageslider.title }}" class="img-thumbnail" /> {% else %} <span class="img-thumbnail list"><i class="fa fa-camera fa-2x"></i></span> {% endif %}</td>{% endif %}
                        {% if record_title %}<td class="text-left">{{ imageslider.title }}</td>{% endif %}
                        {% if record_targeturl %}<td class="text-left">{{ imageslider.link }}</td>{% endif %}
                        {% if record_textalignment %}<td class="text-left">{{ imageslider.aling }}</td>{% endif %}
                        {% if record_buttoncaption %}<td class="text-left">{{ imageslider.btncap }}</td>{% endif %}
                        {% if record_descriptionmain %}<td class="text-left">{{ imageslider.des_main }}</td>{% endif %}
                        {% if record_descriptionsub %}<td class="text-left">{{ imageslider.des_sub }}</td>{% endif %}
                        <td class="text-left">{{ imageslider.status }}</td>
                        <td class="text-right"><a href="{{ imageslider.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a></td>

                      </tr>
                    {% endfor %}
                    {% else %}
                  <tr>
                    <td class="text-center" colspan="10">{{ text_no_results }}</td>
                  </tr>
                  {% endif %}
                    </tbody>                  
                </table>
                
              </div>
            </form>
            <div class="row">
              <div class="col-sm-6 text-left">{{ pagination }}</div>
              <div class="col-sm-6 text-right">{{ results }}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
