{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
              {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
              {% endif %}
            </div>
          </div>   
          <div class="form-group"> 
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          {% if link %}
          <div class="form-group"> 
            <label class="col-sm-2 control-label" for="input-link">{{ entry_link }}</label>
            <div class="col-sm-10">
               <input type="text" name="tvcmscmsblock_link" value="{{ tvcmscmsblock_link }}" class="form-control" placeholder="{{ entry_link }}" id="input-lin" />
            </div>
          </div>
          {% endif %}
         
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <ul class="nav nav-tabs" id="language">
                {% for language in languages %}
                <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                {% endfor %}
              </ul>
              <div class="tab-content">{% for language in languages %}
                <div class="tab-pane" id="language{{ language.language_id }}">
                  
                  {% if main_image or main_title or main_shortdescription or main_description %}
                    <center>
                        <div class="form-group"> <h1>Main Form</h1></div>
                    </center>

                    {% if main_image %}
                     <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-main_image{{ language.language_id }}">{{ entry_main_image }}</label>
                        <div class="col-sm-10">
                          <a href="" id="thumb-main_image{{ language.language_id }}" data-toggle="image" class="img-thumbnail">
                            <img src="{{ main_img[language.language_id] }}" alt="" title="" data-placeholder="{{ entry_main_image }}" />
                          </a>
                            <input type="hidden" name="tvcmscmsblock[{{ language.language_id }}][main_image]" value="{{ tvcmscmsblock[language.language_id] ? tvcmscmsblock[language.language_id].main_image }}" id="input-main_image{{ language.language_id }}" />
                          {% if error_image[language.language_id] %}
                          <div class="text-danger">{{ error_image[language.language_id] }}</div>
                          {% endif %}
                        </div>
                      </div>
                    {% endif %}
                    {% if main_title %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-main_title{{ language.language_id }}">{{ entry_main_title }}</label>
                        <div class="col-sm-10">
                           <input type="text" name="tvcmscmsblock[{{ language.language_id }}][main_title]" value="{{ tvcmscmsblock[language.language_id] ? tvcmscmsblock[language.language_id].main_title }}" class="form-control" placeholder="{{ entry_main_title }}" id="input-main_title{{ language.language_id }}" />
                        </div>
                      </div>
                    {% endif %}
                    {% if main_shortdescription %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-main_shortdes{{ language.language_id }}">{{ entry_main_short_description }}</label>
                        <div class="col-sm-10">
                           <input type="text" name="tvcmscmsblock[{{ language.language_id }}][main_short_description]" value="{{ tvcmscmsblock[language.language_id] ? tvcmscmsblock[language.language_id].main_short_description }}" class="form-control" placeholder="{{ entry_main_short_description }}" id="input-main_shortdes{{ language.language_id }}" />
                        </div>
                      </div>
                    {% endif %}
                    {% if main_description %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-main_des{{ language.language_id }}">{{ entry_main_description }}</label>
                        <div class="col-sm-10">
                           <input type="text" name="tvcmscmsblock[{{ language.language_id }}][main_description]" value="{{ tvcmscmsblock[language.language_id] ? tvcmscmsblock[language.language_id].main_description }}" class="form-control" placeholder="{{ entry_main_description }}" id="input-main_des{{ language.language_id }}" />
                        </div>
                      </div>
                    {% endif %}
                  {% endif %}

                   {% if image or title or shortdescription or description or buttoncaption %}
                    <center>
                        <div class="form-group"> <h1>Record Form</h1></div>
                    </center>
                    {% if image %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-image{{ language.language_id }}">{{ entry_image }}</label>
                        <div class="col-sm-10">
                          <a href="" id="thumb-image{{ language.language_id }}" data-toggle="image" class="img-thumbnail">
                            <img src="{{ record_img[language.language_id] }}" alt="" title="" data-placeholder="{{ entry_image }}" />
                          </a>
                            <input type="hidden" name="tvcmscmsblock[{{ language.language_id }}][image]" value="{{ tvcmscmsblock[language.language_id] ? tvcmscmsblock[language.language_id].image }}" id="input-image{{ language.language_id }}" />
                          {% if error_image[language.language_id] %}
                          <div class="text-danger">{{ error_image[language.language_id] }}</div>
                          {% endif %}
                        </div>
                      </div>
                    {% endif %}
                    {% if title %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-title{{ language.language_id }}">{{ entry_maintitle }}</label>
                        <div class="col-sm-10">
                           <input type="text" name="tvcmscmsblock[{{ language.language_id }}][title]" value="{{ tvcmscmsblock[language.language_id] ? tvcmscmsblock[language.language_id].title }}" class="form-control" placeholder="{{ entry_maintitle }}" id="input-title{{ language.language_id }}" />
                        </div>
                      </div>
                    {% endif %}
                    {% if shortdescription %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-shortdes{{ language.language_id }}">{{ entry_short_description }}</label>
                        <div class="col-sm-10">
                           <input type="text" name="tvcmscmsblock[{{ language.language_id }}][short_description]" value="{{ tvcmscmsblock[language.language_id] ? tvcmscmsblock[language.language_id].short_description }}" class="form-control" placeholder="{{ entry_short_description }}" id="input-shortdes{{ language.language_id }}" />
                        </div>
                      </div>
                    {% endif %}
                    {% if description %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-des{{ language.language_id }}">{{ entry_description }}</label>
                        <div class="col-sm-10">
                           <input type="text" name="tvcmscmsblock[{{ language.language_id }}][description]" value="{{ tvcmscmsblock[language.language_id] ? tvcmscmsblock[language.language_id].description }}" class="form-control" placeholder="{{ entry_description }}" id="input-des{{ language.language_id }}" />
                        </div>
                      </div>
                    {% endif %}
                    {% if buttoncaption %}
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-btncap{{ language.language_id }}">{{ entry_button_caption }}</label>
                        <div class="col-sm-10">
                           <input type="text" name="tvcmscmsblock[{{ language.language_id }}][button_caption]" value="{{ tvcmscmsblock[language.language_id] ? tvcmscmsblock[language.language_id].button_caption }}" class="form-control" placeholder="{{ entry_button_caption }}" id="input-btncap{{ language.language_id }}" />
                        </div>
                      </div>
                    {% endif %}
                  {% endif %}
                </div>
                {% endfor %}</div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  
  <script type="text/javascript"><!--
    $('#language a:first').tab('show');
//--></script></div>
{{ footer }}
