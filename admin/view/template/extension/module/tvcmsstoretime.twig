{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
              {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
              {% endif %}
            </div>
          </div>   
          <div class="form-group"> 
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group"> 
            <label class="col-sm-2 control-label" for="input-montofri">{{ entry_montofri }}</label>
            <div class="col-sm-10">
               <input type="text" name="tvcmsstoretime_monday_friday" value="{{ tvcmsstoretime_monday_friday }}" class="form-control" placeholder="{{ entry_montofri }}" id="input-lin" />
            </div>
          </div>
          <div class="form-group"> 
            <label class="col-sm-2 control-label" for="input-montofri">{{ entry_saturday }}</label>
            <div class="col-sm-10">
               <input type="text" name="tvcmsstoretime_saterday" value="{{ tvcmsstoretime_saterday }}" class="form-control" placeholder="{{ entry_saturday }}" id="input-lin" />
            </div>
          </div>
          <div class="form-group"> 
            <label class="col-sm-2 control-label" for="input-montofri">{{ entry_sunday }}</label>
            <div class="col-sm-10">
               <input type="text" name="tvcmsstoretime_sunday" value="{{ tvcmsstoretime_sunday }}" class="form-control" placeholder="{{ entry_sunday }}" id="input-lin" />
            </div>
          </div>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <ul class="nav nav-tabs" id="language">
                {% for language in languages %}
                <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
                {% endfor %}
              </ul>
              <div class="tab-content">{% for language in languages %}
                <div class="tab-pane" id="language{{ language.language_id }}">
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-title{{ language.language_id }}">{{ entry_title }}</label>
                    <div class="col-sm-10">
                       <input type="text" name="tvcmsstoretime[{{ language.language_id }}][title]" value="{{ tvcmsstoretime[language.language_id] ? tvcmsstoretime[language.language_id].title }}" class="form-control" placeholder="{{ entry_title }}" id="input-title{{ language.language_id }}" />
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-shortdes{{ language.language_id }}">{{ entry_information }}</label>
                    <div class="col-sm-10">
                       <input type="text" name="tvcmsstoretime[{{ language.language_id }}][information]" value="{{ tvcmsstoretime[language.language_id] ? tvcmsstoretime[language.language_id].information }}" class="form-control" placeholder="{{ entry_information }}" id="input-shortdes{{ language.language_id }}" />
                    </div>
                  </div>
                </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  
  
  <script type="text/javascript"><!--
    $('#language a:first').tab('show');
//--></script></div>
{{ footer }}
