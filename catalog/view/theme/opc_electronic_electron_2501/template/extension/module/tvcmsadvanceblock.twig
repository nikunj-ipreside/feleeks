<div class=" container-fluid ttvcmsadvanceblock">
	<div class=" container ttvadvanceblock">
		<div class="ttvadvanceblock-title-content">
			{% if main_block_image %}
			<div class="ttvadvance-block-img-block col-xs-6 col-lg-6 col-md-12 col-sm-12 col-xs-12">
				<div class="ttvadvance-block-wrapper">
					<div class="ttvadvance-block-img">
						<img src="{{ main_block_image }}" alt="{{ main_block_image }}">
					</div>
				</div>
			</div>
			{% endif %}
			<div class="ttvadvanceblock-inner-info-box col-xl-6 col-lg-6 col-md-12 col-sm-12 col-xs-12">
				<div class="ttvadvanceblock-info-all-block">
					{% if main_block_title %}
					<div class="ttvadv-block-sub-title">
						{{ main_block_title }}
					</div>
					{% endif %} {% if main_block_description %}
					<div class="ttvadv-block-desc">
						{{ main_block_des }}
					</div>
					{% endif %}
					<div class="tvadvanceblock-slider-inner">
						<div class="ttvadvanceblock-content-box">
							{% for data in advanblock_data %}
							<div class="ttvadvance-block-content-box">
								<div class="ttvadvanceblock-wrapper-info">
									{% if image %}
									<div class="ttvadv-block-inner-img-block">
										<img src="{{ data.tvcmsadvanceblocksub_image }}" alt="{{ data.tvcmsadvanceblocksub_title }}">
									</div>
									{% endif %}
									<div class="ttvadvanceblock-info-box">
										{% if link %} <a href="{{ data.tvcmsadvanceblocksub_link }}">{% endif %}
											{% if title %}
												<div class="ttvadvanceblock-title">{{ data.tvcmsadvanceblocksub_title }}</div>
											{% endif %}
										{% if link %} </a>{% endif %} {% if description %}
										<div class="ttvadvanceblock-dec">
											<p>{{ data.tvcmsadvanceblocksub_des }}</p>
										</div>
										{% endif %}
									</div>
								</div>
							</div>
							{% endfor %} {% if link %}
							<div class="ttvadv-block-btn-caption">
