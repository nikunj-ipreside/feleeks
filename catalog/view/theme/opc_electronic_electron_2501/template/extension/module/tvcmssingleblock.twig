{% if status_description %} {{ description }}{% endif %}
{% if status_buttoncaption %} {{ button_caption }}{% endif %}
{% if status_main_image %} {{ main_image }} {% endif %}
{% if status_main_title %} {{ main_title }} {% endif %}
