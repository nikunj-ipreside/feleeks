{{ header }}
<div id="wrapper">
	<div id="information-contact" class="container">
		<div id="contact">
			<div class="row">{{ column_left }} {% if column_left and column_right %} {% set class = 'col-xl-8 col-lg-12 col-md-12 col-sm-12 col-xs-12' %} {% elseif column_left or column_right %} {% set class = 'col-xl-10 col-lg-12 col-md-12 col-sm-12 col-xs-12' %} {% else %} {% set class = 'col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12' %} {% endif %}
				<div id="content" class="{{ class }}">
					<div id="content">
						{{ content_top }}
						<div id="main">
							<div id="content" class="page-content card">
								<div class="ttv-sub-pages-inner-content">
									<div class="contact-form">
										<form action="{{ action }}" method="post" enctype="multipart/form-data">
											<div class="form-fields">
												<div class="form-group row">
													<div class="col-md-12 ttvpage-sub-title">{{ text_contact_us }}</div>
												</div>
												<div class="form-group row">
													<label class="col-xs-12 col-md-3 form-control-label ttvpage-sub-label">{{ entry_name }}</label>
													<div class="col-xs-12 col-md-6 ttvcontact-page-input-label">
														<input type="text" name="name" value="{{ name }}" id="input-name" placeholder="{{ entry_name }}" class="form-control" /> {% if error_name %}
														<div class="text-danger">{{ error_name }}</div>
														{% endif %}
													</div>
												</div>
												<div class="form-group row">
													<label class="col-xs-12 col-md-3 form-control-label ttvpage-sub-label">{{ entry_email }}</label>
													<div class="col-xs-12 col-md-6 ttvcontact-page-input-label">
														<input class="form-control" name="email" type="email" value="" placeholder="{{ entry_email }}"> {% if error_email %}
														<div class="text-danger">{{ error_email }}</div>
														{% endif %}
													</div>
												</div>
												<div class="form-group row">
													<label class="col-xs-12 col-sm-12 col-md-3 form-control-label ttvpage-sub-label">{{ entry_enquiry }}</label>
													<div class="col-xs-12 col-sm-12 col-md-9 ttvcontact-page-input-label">
														<textarea class="form-control" name="enquiry" placeholder="How can we help?" rows="3"></textarea>
														{% if error_enquiry %}
														<div class="text-danger">{{ error_enquiry }}</div>
														{% endif %}
													</div>
												</div>
												{{ captcha }}
											</div>
											<footer class="form-footer text-sm-right">
												<input class="btn btn-primary ttv-innerpage-button" type="submit" value="{{ button_submit }}">
											</footer>
										</form>
									</div>
								</div>
							</div>
						</div>
						{{ content_bottom }}
					</div>
				</div>
				{{ column_right }}
			</div>
		</div>
	</div>





	

</div>


{{ footer }}